	<div class="row">	


		<div class="col-md-4 sm-6 video-panel-container">
			<div class="thumbnail video-panel"
				<p id="instructions">
					<a href="/submit" class="btn btn-custom"><span class="fa fa-user"></span> Join the video chain</a>
					<br>
					<div class="caption">
						<ol>
							<li><p>Pick the question you want to answer</p></li>
							<li><p>Answer in a video! (it can be you alone, you with you friends, or you with your <em>cat</em></p></li>
							<li><p>Upload it to Youtube, submit it on the platform...</p></li>
							<li><p>And get to ask <em>your</em> own question</p></li>
						</ol>
					</div>
				</p>
			</div>

		</div>

		{{#each videos}}
			
			<div class="col-md-4 col-sm-6 video-panel-container">
				<div class="thumbnail video-panel">
					
					<a href="/singlevideo/{{this._id}}">
						{{#embedYoutubeImg}}{{this}}{{/embedYoutubeImg}}
					</a>
					
					<div class="video-panel-caption">
						<p class="speakerlabel">{{this.speaker}} shares</p>
						<p class="personanswers">{{this.promptString}}</p>
						<p class="personasks">& asks:  "{{this.newQuestion}}"</p>
						
					</div>
			</div>
		</div>
		{{/each}}
	
	</div> 

</div>

